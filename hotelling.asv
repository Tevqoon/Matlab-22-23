function [e, x] = hotelling(A, x0, tol, N, redukcije)

e = 0;
x0 = x0/norm(x0);
x = x0;
B = @(z) A * z;

for i = 1:redukcije
    x = x0;
    Bx = B(x);
    k = 0;
    while norm(Bx - e*x) >= tol && k < N
        x = Bx / norm(Bx);
        Bx = B(x);
        e = x' * Bx;
        k = k + 1;
    end
    B = @(z) B(z) - e * (x' * z) * x;
end

